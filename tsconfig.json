        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
